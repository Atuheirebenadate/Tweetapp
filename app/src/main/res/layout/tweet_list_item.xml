<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:background="@color/cardview_shadow_end_color">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="67dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPhoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivPhoto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.457"
        tools:text="Atuheire Benadate @benadate" />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="316dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/quot_i_am_a_software_engineer_who_has_the_ability_to_solve_the_problems"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <ImageView
        android:id="@+id/ivMessage"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toStartOf="@+id/tvmessage"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAbout"
        app:srcCompat="@drawable/ic_baseline_message_24" />

    <ImageView
        android:id="@+id/ivForward"
        android:layout_width="50dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toStartOf="@+id/tvshare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvlike"
        app:layout_constraintTop_toTopOf="@+id/tvlike"
        app:srcCompat="@drawable/ic_baseline_keyboard_return_24" />

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvretweet"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvshare"
        app:layout_constraintTop_toTopOf="@+id/tvshare"
        app:srcCompat="@drawable/ic_baseline_transform_24" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="50dp"
        android:layout_height="55dp"
        app:layout_constraintEnd_toStartOf="@+id/tvlike"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvmessage"
        app:layout_constraintTop_toTopOf="@+id/tvmessage"
        app:srcCompat="@drawable/ic_baseline_thumb_up_alt_24" />

    <TextView
        android:id="@+id/tvmessage"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:text="@string/_12"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ivLike"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivMessage"
        app:layout_constraintTop_toTopOf="@+id/ivMessage" />

    <TextView
        android:id="@+id/tvlike"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:text="@string/_34"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ivForward"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivLike"
        app:layout_constraintTop_toTopOf="@+id/ivLike" />

    <TextView
        android:id="@+id/tvshare"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:text="@string/_40"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ivRetweet"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivForward"
        app:layout_constraintTop_toTopOf="@+id/ivForward" />

    <TextView
        android:id="@+id/tvretweet"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:text="@string/_80"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivRetweet"
        app:layout_constraintTop_toTopOf="@+id/ivRetweet"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>